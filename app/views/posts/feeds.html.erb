<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="col-xs-4">
        <h3>User</h3>
        <div class="form-control">
          <%= @users.count %>
        </div>
      </div>

      <div class="col-xs-4">
        <h3>Post</h3>
        <div class="form-control">
          <%= @posts.count %>
        </div>
      </div>

      <div class="col-xs-4">
        <h3>Comment</h3>
        <div class="form-control">
          <%= @replies.count %>
        </div>
      </div>

<div class="clearfix"></div>
      <div class="col-xs-6">
        <% i=1 %>
        <table class="table">
          <thead>
            <h3>ChatterBox</h3>
          </thead>
          <tbody>
            <% @chatterbox.each do |user| %>
              <tr>
                <th scope="row"><%= i %></th>
                <td><%= link_to user.name, user_path(user) %> </td>
                <td><%= user.replies_count %></td>
              </tr>
              <% i+=1 %>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-xs-6">
        <% j=1 %>
        <table class="table">
          <thead>
            <h3>Most Populer Post</h3>
          </thead>
          <tbody>
            <% @top10_posts.each do |post| %>
              <tr>
                <th scope="row" class="col-xs-1"><%= j %></th>
                <td class="col-xs-7"><%= link_to post.title, post_path(post) %></td>
                <td class="col-xs-4"><%= (post.created_at).strftime("%Y-%m-%d") %></td>
              </tr>
              <% j+=1 %>
            <% end %>
          </tbody>
        </table>
      </div>      
    </div>
  </div>
</div>