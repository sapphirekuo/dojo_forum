
    <div class="col-md-12">


      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="text-center col-md-2">
              <%= sort_link(@q, :replies_count, "Replies count", default_order: :desc) %>
            </th>
            <th class="col-md-6">
              <%= sort_link(@q, :title, "Title", default_order: :desc) %>
            </th>
            <th class="text-center col-md-2">
              <%= sort_link(@q, :last_replied_at, "Last replied at", default_order: :desc) %>
            </th>
            <th class="text-center col-md-2">
              <%= sort_link(@q, :views_count, "Viewed count", default_order: :desc) %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <th scope="row" class="text-center"><%= post.replies_count %></th>
            <td><%= link_to post.title, post_path(post) %></td>
            <td class="text-center"> 
              <% if post.replies.present? %>
                <%= (post.replies.last.created_at).strftime("%Y-%m-%d") %>
              <% end %>
            </td>
            <td class="text-center">
              <%= post.views_count %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @posts %>
      </div>

    </div>

