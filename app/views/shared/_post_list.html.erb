
    <div class="col-md-12">


      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Replies count</th>
            <th>Title</th>
            <th>Last replied at</th>
            <th> Viewed count</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <th scope="row"><%= post.replies_count %></th>
            <td><%= link_to post.title, post_path(post) %></td>
            <td>
              <% if post.replies.present? %>
                <%= (post.replies.last.created_at).strftime("%Y-%m-%d") %>
              <% end %>
            </td>
            <td>
              <%= post.views_count %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @posts %>
      </div>

    </div>

